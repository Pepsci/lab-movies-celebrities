<h2>Form New Celebrity</h2>

<form action="/celebrities/create" method="post">
    <label for="name">Name</label>
    <input type="text" class="input" name="name" placeholder="Enter a name">
    <label for="occupation"></label>
    <select name="occupation" id="occupation">
        <option value="actor">Actor</option>
        <option value="singer">Singer</option>
        <option value="comedian">Comedian</option>
        <option value="unknown">Unknown</option>
    </select>
    <label for="catchPhrase">Catch-Phrase</label>
    <input type="text" name="catchPhrase" id="catchPhrase" class="input" placeholder="Enter a catch phrase">
    <button>Add a Celebrity</button>
</form>